<link rel="stylesheet" href="/styles.css">

<div class="container">
    <h2>Add New Task:</h2>
    <form action="/add" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" required><br>

        <label for="due-date">Due date:</label>
        <input type="date" name="due-date" required><br>

        <label for="description">Description:</label>
        <textarea name="description"></textarea><br>

        <label for="tags">Tags: (each should be separated by a comma)</label>
        <input type="text" name="tags" placeholder="Example: Tag1, Tag2"><br>

        <label for="progress">Progress:</label>
        <select name="progress" required>
            <option value="not-started">Not Started</option>
            <option value="in-progress">In Progress</option>
            <option value="done">Done</option>
        </select><br>

        <label for="priority">Priority:</label>
        <select name="priority" required>
            <option value="1">1 (Least Urgent)</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5 (Most Urgent)</option>
        </select><br>

        <label for="pinned">Pinned:</label>
        Yes <input type="radio" name="pinned" value="true">
        No <input type="radio" name="pinned" value="false" checked><br>

        <input type="submit" value="Create New Task">
    </form>
</div>
